{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Smart Wallet Bridge API",
  "colors": {
    "primary": "#ffffff",
    "light": "#e5e5e5",
    "dark": "#cccccc"
  },
  "favicon": "/favicon.png",
  "api": {
    "playground": {
      "mode": "hide"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/errors"
            ]
          },
          {
            "group": "Bridge Endpoints",
            "pages": [
              "api-reference/endpoint/create-bridge",
              "api-reference/endpoint/get-status",
              "api-reference/endpoint/list-sessions"
            ]
          },
          {
            "group": "Faucet & Utility",
            "pages": [
              "api-reference/endpoint/request-usdt",
              "api-reference/endpoint/health-check"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@yourdomain.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://yourdomain.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/yourhandle",
      "github": "https://github.com/yourusername/bridge-api",
      "linkedin": "https://linkedin.com/company/yourcompany"
    }
  }
}